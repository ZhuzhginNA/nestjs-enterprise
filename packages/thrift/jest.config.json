{
  "collectCoverage": true,
  "coveragePathIgnorePatterns": [
    "test"
  ],
  "collectCoverageFrom": [
    "<rootDir>/src/main/**/*"
  ],
  "testMatch": [
    "<rootDir>/src/test/**/*.(j|t)s"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/"
  ],
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ],
  "preset": "ts-jest",
  "globals": {
    "ts-jest": {
      "useESM": true,
      "tsconfig": "<rootDir>/tsconfig.test.json"
    }
  },
  "extensionsToTreatAsEsm": [".ts", ".d.ts"]
}
